
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Attendee Event Page</title>

  <!-- bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <!-- custom CSS -->
  <link rel="stylesheet" href="/main.css" />
</head>

<!-- dark theme styling -->
<body class="bg-charcoal text-beige">

  <!-- main content container -->
  <div class="container py-5" style="max-width: 800px;">
    <h1 class="text-heading mb-4">Attendee Event Page</h1>

    <!-- display selected event details -->
    <div class="mb-4 p-4 rounded bg-slate-box border border-slate">
      <h2 class="text-mocha fw-bold mb-3"><%= event.title %></h2>
      <p><strong>Date:</strong> <%= event.date %></p>
      <p><strong>Time:</strong> <%= event.time || 'Not set' %></p>
      <p><strong>Description:</strong> <%= event.description %></p>
    </div>

    <!-- booking form for attendees -->
    <form action="/attendee/book/<%= event.id %>" method="POST" class="bg-slate-box border border-slate p-4 rounded">

      <!-- attendee name input -->
      <div class="mb-3">
        <label class="form-label fw-semibold">Your Name:</label>
        <input type="text" name="attendee_name" class="form-control bg-light text-dark" required>
      </div>

      <!-- attendee email input -->
      <div class="mb-3">
        <label class="form-label fw-semibold">Email Address:</label>
        <input type="email" name="attendee_email" class="form-control bg-light text-dark" placeholder="you@example.com" required>
      </div>


      <!-- ticket selection section -->
<div class="row g-4">
  <% tickets.forEach(ticket => { %>
    <div class="col-md-6 d-flex flex-column align-items-center">
      <label class="form-label fw-semibold text-center mb-2">
        <%= ticket.ticket_type %> Ticket<br>
        $<%= ticket.price.toFixed(2) %>  
        (<%= ticket.quantity %> of <%= ticket.original_quantity %> available)
      </label>

      <!-- quantity selector with increment and decrement buttons -->
      <div class="input-group justify-content-center" style="width: 140px;">
        <button type="button" class="btn btn-mocha btn-decrement" data-target="quantity_<%= ticket.ticket_type %>">-</button>
        <input 
          type="number" 
          name="quantity_<%= ticket.ticket_type %>" 
          id="quantity_<%= ticket.ticket_type %>"
          class="form-control bg-light text-dark text-center" 
          min="0" 
          max="<%= ticket.quantity %>" 
          value="0"
        >
        <button type="button" class="btn btn-mocha btn-increment" data-target="quantity_<%= ticket.ticket_type %>">+</button>
      </div>
    </div>
  <% }) %>
</div>

<!-- show error if validation failed -->
      <% if (error) { %>
        <p class="text-danger"><%= error %></p>
      <% } %>

      <!-- submit button to book -->
      <div class="text-center mt-4">
        <button type="submit" class="btn btn-slate">Book</button>
      </div>
    </form>

    <!-- back navigation link -->
    <div class="mt-4">
      <a href="/attendee" class="btn btn-mocha">Back to Events</a>
    </div>
  </div>

  <!-- JS for the increase and decrease ticket qty buttons -->
  <script>
    //increment buttons
  document.querySelectorAll('.btn-increment').forEach(button => {
    button.addEventListener('click', () => {
      const inputId = button.getAttribute('data-target');
      const input = document.getElementById(inputId);
      const max = parseInt(input.max);
      let currentValue = parseInt(input.value) || 0;
      if(currentValue < max) {
        input.value = currentValue + 1;
      }
    });
  });

  //decrement buttons
  document.querySelectorAll('.btn-decrement').forEach(button => {
    button.addEventListener('click', () => {
      const inputId = button.getAttribute('data-target');
      const input = document.getElementById(inputId);
      let currentValue = parseInt(input.value) || 0;
      if(currentValue > 0) {
        input.value = currentValue - 1;
      }
    });
  });
</script>

</body>
</html>